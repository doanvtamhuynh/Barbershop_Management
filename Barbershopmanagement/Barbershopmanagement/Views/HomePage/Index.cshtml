
@{
    ViewBag.Title = "Trang Chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Barbershopmanagement.Models.DICHVU> dsDichVu = new List<Barbershopmanagement.Models.DICHVU>();
    List<Barbershopmanagement.Models.NHANVIEN> dsNhanVien = new List<Barbershopmanagement.Models.NHANVIEN>();
    try
    {
        Barbershopmanagement.Models.BarbershopManagementEntities db = new Barbershopmanagement.Models.BarbershopManagementEntities();
        dsDichVu = db.DICHVUs.Take(3).ToList();
        dsNhanVien = db.NHANVIENs.Take(3).ToList();
    }
    catch (Exception e) { }

}

<style>
    .banner-container {
        width: 100%;
        overflow: hidden;
    }

    .banner {
        display: flex;
        transition: transform 0.5s ease; /* Hiệu ứng chuyển đổi mượt mà */
    }

        .banner img {
            width: 100%;
            height: auto;
        }
    .item-services {
        display: inline-flex;
        margin-left: 85px;
        margin-top: 30px;
        box-shadow: 0 3px 8px rgb(0 0 0 / 15%);
        border-radius: 10px;
        width: 300px;
    }
</style>

<div class="banner-container">
    <div class="banner">
        <img src="~/Content/images/bn7.jpg" alt="Image 1">
        <img src="~/Content/images/bn2.jpg" alt="Image 2">
        <img src="~/Content/images/bn6.jpg" alt="Image 3">
    </div>
</div>

<script>
    const banner = document.querySelector('.banner');
    let scrollAmount = 0;
    const scrollDistance = 1; // Khoảng cách cuộn mỗi lần

    function autoScroll() {
        scrollAmount += scrollDistance;
        banner.style.transform = `translateX(-${scrollAmount}px)`;

        // Nếu cuộn đến hết chiều rộng của hình ảnh cuối cùng
        if (scrollAmount >= banner.scrollWidth - banner.clientWidth) {
            scrollAmount = 0; // Quay lại vị trí ban đầu
            banner.style.transform = `translateX(0)`;
        }
    }

    setInterval(autoScroll, 15); // Tự động cuộn mỗi 30 mili giây
</script>

<div class="container"
     style="
        margin-top: 100px;
        margin-bottom: 100px;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      ">

    <hr />
    <h2 style="display: flex; justify-content: center">DỊCH VỤ</h2>
    <div>
        <div class="top"
             style="display: flex; justify-content: center; gap: 40px">
            @for (int i = 0; i < dsDichVu.Count; i++)
            {
